{
  "name": "arabic-emoticons",
  "version": "0.1.0",
  "description": "Because who knew there's a native smiley?",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfjsa/arabic-emoji.git"
  },
  "keywords": [
    "arabic",
    "script",
    "emoticons",
    "emoji"
  ],
  "scripts": {
    "start": "npm run build:all && npm run watch:all",
    "clean": "rm -f dist/*",
    "autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "serve": "browser-sync start --server --files \"dist/*.css, **/*.html, !node_modules/**/*.html\"",
    "build:css": "cp src/*.css dist/ && npm run autoprefixer",
    "build:all": "mkdir -p dist/ && npm run build:css",
    "watch:css": "onchange \"src/*.css\" -- npm run build:css",
    "watch:all": "npm-run-all -p serve watch:css"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.8",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2"
  },
  "author": "lfjsa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lfjsa/arabic-emoji/issues"
  },
  "homepage": "https://github.com/lfjsa/arabic-emoji#readme"
}
