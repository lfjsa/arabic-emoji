{
  "name": "arabic-emoticons",
  "version": "0.1.0",
  "description": "Because who knew there's a native smiley?",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfjsa/arabic-emoji.git"
  },
  "keywords": [
    "arabic",
    "script",
    "emoticons",
    "emoji"
  ],
  "scripts": {
    "start": "npm run build:all && npm run watch:all",
    "clean": "rm -f dist/*",
    "autoprefixer": "postcss -u autoprefixer -r dist/*",
    "lint": "eslint src/*.js",
    "uglify": "uglifyjs src/*.js -m -o dist/app.js && uglifyjs src/*.js -m -c -o dist/app.min.js",
    "serve": "browser-sync start --server --files \"dist/*.css, dist/*.js, **/*.html, !node_modules/**/*.html\"",
    "data": "cp src/*.json dist/",
    "build:css": "cp src/*.css dist/ && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:all": "mkdir -p dist/ && npm run build:css && npm run build:js && npm run data",
    "watch:css": "onchange \"src/*.css\" -- npm run build:css",
    "watch:js": "onchange \"src/*.js\" -- npm run build:js",
    "watch:data": "onchange \"src/*.json\" -- npm run data",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:data"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.8",
    "eslint": "^2.10.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "uglify-js": "^2.6.2"
  },
  "author": "lfjsa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lfjsa/arabic-emoji/issues"
  },
  "homepage": "https://github.com/lfjsa/arabic-emoji#readme"
}
